@using UniversityManagement.ViewModels
@model IEnumerable<CourseViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Courses <i class="fa-solid fa-book-bookmark"></i></h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create
        <i class="fa-solid fa-plus"></i>
    </a>
</p>
<form asp-controller="Courses" asp-action="Index">
    <p>
        <select asp-items="@ViewBag.Categories" name="CategoryId">
            <option value="">All</option>
        </select>
        <input type="submit" value="Search" class="search-submit"/>
    </p>
    <div class="input-group mb-3">
        <input placeholder="search..." type="text" name="SearchString" value="@ViewBag.Search" />
        <div class="input-group-prepend">
            <button class="btn btn-outline-secondary" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
    </div>
</form>
<table  class=" table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">
                    @Html.DisplayNameFor(model => model.Name)
                </a>
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CategorySort"]">
                    @Html.DisplayNameFor(model => model.Category)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn-primary mx-3" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
