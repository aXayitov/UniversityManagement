@using UniversityManagement.ViewModels
@model IEnumerable<InstructorViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Instructors <i class="fa-solid fa-chalkboard-user"></i></h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create
        <i class="fa-solid fa-plus"></i>
    </a>
</p>
<form asp-controller="Instructors" asp-action="Index">
    <p>
        <select asp-items="@ViewBag.Departments" name="DepartmentId">
            <option value="">All</option>
        </select>
        <input type="submit" value="Search" class="search-submit" />
    </p>
    <div class="input-group mb-3">
        <input placeholder="search..." type="text" name="SearchString" value="@ViewBag.Search" />
        <div class="input-group-prepend">
            <button class="btn btn-outline-secondary" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
    </div>
</form>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">
                    @Html.DisplayNameFor(model => model.FullName)
                </a>
            </th>
            <th scope ="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EmailSort"]">
                    @Html.DisplayNameFor(model => model.Email)
                </a>
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                <a class="btn btn-primary mx-3" asp-action="Details" asp-route-id="@item.id">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Delete </a>
            </td>
        </tr>
}
    </tbody>
</table>
