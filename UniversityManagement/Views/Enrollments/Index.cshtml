@using UniversityManagement.ViewModels
@model IEnumerable<EnrollmentViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Enrollments <i class="fa-solid fa-user-pen"></i></h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create
        <i class="fa-solid fa-plus"></i>
    </a>
</p>
<form asp-controller="Enrollments" asp-action="Index">
    <p>
        <select asp-items="@ViewBag.Students" name="StudentId">
            <option value="">All</option>
        </select>
        <select asp-items="@ViewBag.Assigments" name="CourseAssigmentId">
            <option value="">All</option>
        </select>
        <input type="submit" value="Search" class="search-submit"/>
    </p>
    <div class="input-group mb-3">
        <input placeholder="search..." type="text" name="SearchString" value="@ViewBag.Search" />
        <div class="input-group-prepend">
            <button class="btn btn-outline-secondary" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
    </div>
</form>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StudentSort"]">
                    @Html.DisplayNameFor(model => model.Student)
                </a>
            </th>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AssigmentSort"]">
                    @Html.DisplayNameFor(model => model.Assigment)
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assigment)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn-primary mx-3" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
